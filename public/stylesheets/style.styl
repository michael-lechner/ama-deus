body, html
    max-width 1440px
    overflow-x hidden

body
    display: none

img 
    max-width 100%

.navbar
    background-color #fff
    border none
    margin 85px 0px 0px 0px

ul.navbar-nav
    float right

.navbar-default .navbar-nav:hover
    background-color #fff

.navbar-default .navbar-nav>.active>a:hover
    background-color #fff
    color #777

.navbar-default .navbar-nav>.active>a
    background-color #fff
    color #777

.navbar-default .navbar-nav>li>a
    font-size 18px
    color rgba(153, 153, 153, 1.0)    
    
.navbar-default .navbar-nav>li>a:hover
    color rgba(153, 153, 153, 1.0)

.nav-cont
    margin 0px 0px 0px 3%

.main-nav.list-inline > li 
    padding: 0 4px 0 4px

.main-logo
    height 125px
    margin 15px 0px 0px 0px
    cursor pointer

.main-row
    height: 519px

.content-block
    background-color rgba(247, 247, 247, 1.0)
    padding 30px 180px 130px 40px
    height: 100%
    overflow: hidden
    position: relative

.content-block .ps-scrollbar-y-rail
    right: 24px

.content-block h1
    font-size 16px
    color #777
    letter-spacing 3px
    margin 0px 0px 25px 0px

.content-block h2
    font-size 15px
    color: rgba(130, 78, 135, 1.0)

.content-block p
    font-size 14px
    color #999
    text-align justified
    margin 0px 0px 25px 0px


/*** index, home ***/
.col-sm-12.no-padding
    padding 0px

.col-sm-3.no-padding
    padding 0px

.col-sm-9.no-padding
    padding 0px

.col-sm-7.no-padding
    padding 0px

.col-sm-5.center-cont
    padding 0px 10px 0px 25px
    overflow none

.row.center-row
    padding 0px 0px 10px 0px 

.home-center-top img
    height: 334px

.home-center-bottom img
    height: 220px

.home-right img
    height: 564px

.home-img
    position: relative

.home-img .overlay
    display: none
    position: absolute
    top: 0px
    color: #fff;
    background-color: rgba(52, 73, 94,.4)

.home-img .overlay
    font-family: 'Copse', serif
    font-size: 16px

.home-img .overlay .quote
    position: relative
    text-align: center
    width: 60%
    margin: 20% auto 0 auto

.home-img .overlay .author
    text-align: center
/*******************/

/****page styles****/
.left-bar
    height: 100%

.left-bar img
    height: 100%

.left-bar .quote-container
    position: absolute
    text-align: center
    padding: 20px 20px 20px 20px
    color: #fff
    font-family: 'Copse', serif
    font-size: 20px
    top: 200px

.left-bar .quote
    display: none

.left-bar .author
    display: none

.about-img
    border-radius: 100px
    float: left
    margin: 0 20px 15px 0 

.course-descriptions h2
    margin: 10px 0 10px 0

.course-descriptions h2:first-child
    margin: 0 0 10px 0

.course-descriptions p
    margin: 8px 0 8px 0

.footer
    background-color rgba(247, 247, 247, 1.0)
    padding: 20px 20px 15px 20px
    font-size: 12px
    margin-top: 13px
    text-align: center
/*******************/

