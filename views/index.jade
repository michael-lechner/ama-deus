extends layout

block content
  .row.main-block
    .col-sm-12.no-padding
        .col-sm-3.no-padding.home-left.home-img
            img(src='/images/home-left.png')
            .overlay 
                .quote Love is in all healing no matter what technique you use.
                .author - Alberto Aguas -
        .col-sm-9.no-padding
            .row
                .col-sm-5.center-cont
                    .row.center-row
                        .col-sm-12.home-center-top.home-img
                            img(src='/images/home-center-top.png')
                            .overlay 
                                .quote God-realization is nothing but the ability and expansiveness of the heart to love everything equally.
                                .author - Amma -
                    .row
                        .col-sm-12.home-center-bottom.home-img
                            img(src='/images/home-center-bottom.png')
                            .overlay 
                                .quote No one has the copyright on love.
                                .author - Alberto Aguas -
                .col-sm-7.no-padding.home-right.home-img
                    img(src='/images/home-right.png')
                    .overlay 
                        .quote The things that keep us coming back is withholding our love.
                        .author - Alberto Aguas -